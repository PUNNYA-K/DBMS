INVOICE> db.customer.aggregate([{$group:{_id:"$city",min_age:{$min:"$age"},max_age:{$max:"$age"}}}])
[
  { _id: 'ekm', min_age: 20, max_age: 30 },
  { _id: 'tvm', min_age: 22, max_age: 55 },
  { _id: 'calicut', min_age: null, max_age: null }
]




